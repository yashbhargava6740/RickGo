<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookRikshaw"
    android:background="@drawable/page2"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/sourcespin"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="245dp"
        android:layout_marginBottom="445dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="327dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="362dp"
        android:fontFamily="monospace"
        android:text="Destination"
        android:textStyle="bold"
        android:textColor="#ecce0b"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Location_header"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="566dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingRight="100dp"
        android:text=" Book E-Riskshaw"
        android:textSize="19sp" />

    <Spinner
        android:id="@+id/destinationspin"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="363dp"
        android:background="@color/black"
        android:layout_marginBottom="326dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="480dp"
        android:fontFamily="monospace"
        android:text="Source "
        android:textStyle="bold"
        android:textColor="#ecce0b"
        android:textSize="24sp" />

    <Button
        android:id="@+id/book"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="121dp"
        android:textColor="#000000"
        android:backgroundTint="#ecce0b"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="233dp"
        android:text="Book" />


</RelativeLayout>